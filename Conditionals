// â¤ if
// if significa "se" â€” ou seja, se algo acontecer, execute o bloco.

if (true) {
  // cÃ³digo a ser executado se a condiÃ§Ã£o for verdadeira
  console.log("Executou o bloco IF!");
}

// ------------------------------------------------------------
// Exemplo 2:
let idade = 18;

if (idade >= 18) {
  console.log("VocÃª Ã© maior de idade");
}
// Se a idade for maior ou igual a 18, mostra â€œVocÃª Ã© maior de idadeâ€.

// ------------------------------------------------------------
// â¤ else if
// O else if testa outra condiÃ§Ã£o caso a primeira falhe.

let hora = 15;

if (hora < 12) {
  console.log("Bom dia!");
} else if (hora < 18) {
  console.log("Boa tarde!");
}
// Mesma lÃ³gica do Ãºltimo exemplo, mas com mais de uma verificaÃ§Ã£o.

// ------------------------------------------------------------
// â¤ else
// O else executa caso nenhuma das condiÃ§Ãµes anteriores seja verdadeira.

let hora2 = 20;

if (hora2 < 12) {
  console.log("Bom dia!");
} else if (hora2 < 18) {
  console.log("Boa tarde!");
} else {
  console.log("Boa noite!");
}
// O else Ã© a â€œÃºltima opÃ§Ã£oâ€.

// ============================================================
// ğŸ” SISTEMAS DE REPETIÃ‡ÃƒO (LOOPS)
// ============================================================

// Os loops repetem um bloco de cÃ³digo vÃ¡rias vezes,
// atÃ© que uma condiÃ§Ã£o deixe de ser verdadeira.

// ------------------------------------------------------------
// â¤ while
// Executa enquanto a condiÃ§Ã£o for verdadeira.

let contador = 1;

while (contador <= 5) {
  console.log("Contando:", contador);
  contador++; // aumenta o valor em 1 a cada repetiÃ§Ã£o
}
// Enquanto contador for menor ou igual a 5, mostra o nÃºmero e soma +1.

// ------------------------------------------------------------
// â¤ do...while
// Executa o bloco pelo menos uma vez, mesmo que a condiÃ§Ã£o seja falsa.

let numero = 6;

do {
  console.log("NÃºmero:", numero);
  numero++;
} while (numero <= 5);

// ------------------------------------------------------------
// â¤ for
// Estrutura com inÃ­cio, condiÃ§Ã£o e incremento â€” tudo em uma linha.

for (let i = 1; i <= 5; i++) {
  console.log("NÃºmero:", i);
}

// ğŸ§  ExplicaÃ§Ã£o:
// inÃ­cio â†’ let i = 1
// condiÃ§Ã£o â†’ i <= 5
// incremento â†’ i++

// ------------------------------------------------------------
// âš™ï¸ Dicas Importantes sobre loops

// ğŸ›‘ break â†’ encerra o loop imediatamente
// â­ï¸ continue â†’ pula para a prÃ³xima repetiÃ§Ã£o

for (let i = 1; i <= 5; i++) {
  if (i === 3) continue; // pula o 3
  if (i === 5) break;    // para no 4
  console.log(i);
}

// ============================================================
// ğŸ§¾ RESUMO GERAL
// ============================================================

// Estrutura        | FunÃ§Ã£o Principal
// -----------------|----------------------------
// if               | Executa um bloco se a condiÃ§Ã£o for verdadeira
// else if          | Testa outra condiÃ§Ã£o se a anterior falhar
// else             | Executa caso nenhuma condiÃ§Ã£o anterior seja verdadeira
// while            | Repete enquanto a condiÃ§Ã£o for verdadeira
// do...while       | Repete ao menos uma vez
// for              | Loop com controle de inÃ­cio, condiÃ§Ã£o e incremento
